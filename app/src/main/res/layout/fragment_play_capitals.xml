<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.view.PlayCapitalsFragment">
    
    <data>
        <variable
            name="viewModel"
            type="com.example.learncountriesandflagsgame.presentation.ui.viewmodels.PlayTheGameViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/play_capitals_title_id"
            android:text="@string/play_capitals_title"
            android:maxLines="1"
            android:autoSizeTextType="uniform"
            android:padding="@dimen/buttons_padding"
            android:textSize="@dimen/title_text_size"
            android:gravity="center"
            android:layout_marginTop="@dimen/vertical_margins_for_play_fragments_borders"
            android:textStyle="normal"
            android:fontFamily="@font/jim_nightshade_regular"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_of_country_to_be_played"
            android:text="@{viewModel.currentCountryToBePlayed.countryName}"

            android:autoSizeTextType="uniform"
            android:padding="@dimen/buttons_padding"
            android:textSize="@dimen/title_text_size"
            android:gravity="center"
            android:layout_marginTop="@dimen/top_margin_for_items_in_choose_region_screen"
            android:textStyle="bold"
            android:fontFamily="@font/jim_nightshade_regular"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/play_capitals_title_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@dimen/buttons_width"
            android:layout_height="@dimen/buttons_height"
            android:id="@+id/first_answer_capitals"
            android:clickable="@{viewModel.isViewClickable()}"
            android:text="@{viewModel.listOfCurrentQuestionOptions.get(0).capitalName}"

            android:padding="@dimen/buttons_padding"
            android:autoSizeTextType="uniform"
            android:background="@drawable/rounded_button_background"
            android:textSize="@dimen/text_size_for_buttons"
            android:gravity="center"
            android:layout_marginTop="@dimen/top_margin_for_items_in_choose_region_screen"
            android:fontFamily="@font/jim_nightshade_regular"
            android:textColor="@color/black"
            app:cornerRadius="@dimen/corner_radius_for_buttons"
            app:layout_constraintTop_toBottomOf="@id/name_of_country_to_be_played"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@dimen/buttons_width"
            android:layout_height="@dimen/buttons_height"
            android:id="@+id/second_answer_capitals"
            android:clickable="@{viewModel.isViewClickable()}"
            android:text="@{viewModel.listOfCurrentQuestionOptions.get(1).capitalName}"

            android:padding="@dimen/buttons_padding"
            android:autoSizeTextType="uniform"
            android:background="@drawable/rounded_button_background"
            android:textSize="@dimen/text_size_for_buttons"
            android:gravity="center"
            android:layout_marginTop="@dimen/top_margin_for_items_in_choose_region_screen"
            android:fontFamily="@font/jim_nightshade_regular"
            android:textColor="@color/black"
            app:cornerRadius="@dimen/corner_radius_for_buttons"
            app:layout_constraintTop_toBottomOf="@id/first_answer_capitals"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@dimen/buttons_width"
            android:layout_height="@dimen/buttons_height"
            android:id="@+id/third_answer_capitals"
            android:padding="@dimen/buttons_padding"
            android:autoSizeTextType="uniform"
            android:clickable="@{viewModel.isViewClickable()}"
            android:text="@{viewModel.listOfCurrentQuestionOptions.get(2).capitalName}"
            android:background="@drawable/rounded_button_background"
            android:textSize="@dimen/text_size_for_buttons"
            android:gravity="center"
            android:layout_marginTop="@dimen/top_margin_for_items_in_choose_region_screen"
            android:fontFamily="@font/jim_nightshade_regular"
            android:textColor="@color/black"
            app:cornerRadius="@dimen/corner_radius_for_buttons"
            app:layout_constraintTop_toBottomOf="@id/second_answer_capitals"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@dimen/buttons_width"
            android:layout_height="@dimen/buttons_height"
            android:id="@+id/fourth_answers_capitals"
            android:clickable="@{viewModel.isViewClickable()}"
            android:text="@{viewModel.listOfCurrentQuestionOptions.get(3).capitalName}"

            android:padding="@dimen/buttons_padding"
            android:autoSizeTextType="uniform"
            android:background="@drawable/rounded_button_background"
            android:textSize="@dimen/text_size_for_buttons"
            android:gravity="center"
            android:layout_marginTop="@dimen/top_margin_for_items_in_choose_region_screen"
            android:fontFamily="@font/jim_nightshade_regular"
            android:textColor="@color/black"
            app:cornerRadius="@dimen/corner_radius_for_buttons"
            app:layout_constraintTop_toBottomOf="@id/third_answer_capitals"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
